{
  "name": "base-arbitrage-bot",
  "version": "1.0.0",
  "description": "Institutional-grade multi-DEX arbitrage system on Base chain using Aave V3 flash loans",
  "main": "bot/index.ts",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:fork": "hardhat test --network hardhat",
    "deploy": "hardhat run scripts/deploy.ts --network base",
    "verify": "hardhat run scripts/verify.ts --network base",
    "bot": "ts-node bot/index.ts",
    "bot:dev": "ts-node-dev --respawn --transpile-only bot/index.ts",
    "fetch-assets": "ts-node bot/core/BorrowableAssetFetcher.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,sol,json,md}\"",
    "clean": "hardhat clean && rm -rf cache artifacts"
  },
  "keywords": [
    "defi",
    "arbitrage",
    "flash-loan",
    "aave",
    "base",
    "uniswap",
    "mev"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.1",
    "ethers": "^6.10.0",
    "dotenv": "^16.4.1"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.3",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "hardhat": "^2.19.4",
    "hardhat-gas-reporter": "^1.0.9",
    "prettier": "^3.2.4",
    "prettier-plugin-solidity": "^1.3.1",
    "solidity-coverage": "^0.8.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
